@model ExpenseUpdateItemViewModel
@{
    ViewBag.Title = "Update Expense";
}
@section Scripts {
    <script>
        $(() => {
            $('#Date').datepicker({
                format: 'mm-dd-yyyy'
            });
        });
    </script>
}
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @if (!Html.ViewData.ModelState.IsValid)
        {
            <div class="alert alert-warning">
                @Html.ValidationSummary()
            </div>
        }
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.RowVersion)
        <div class="col-md-12">
            <h3>@ViewBag.Title</h3>
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(
                        model => model.EmployeeName,
                        new
                        {
                            @for = nameof(Model.EmployeeName),
                            @class = "col-md-2 control-label"
                        }
                    )
                    <div class="col-md-10">
                        <div id="@nameof(Model.EmployeeName)" class="form-control-static">
                            @Html.DisplayFor(model => model.EmployeeName)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(
                        model => model.JobTitleName,
                        new
                        {
                            @for = nameof(Model.JobTitleName),
                            @class = "col-md-2 control-label"
                        }
                    )
                    <div class="col-md-10">
                        <div id="@nameof(Model.JobTitleName)" class="form-control-static">
                            @Html.DisplayFor(model => model.JobTitleName)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(
                        model => model.PeriodDate,
                        new
                        {
                            @for = nameof(Model.PeriodDate),
                            @class = "col-md-2 control-label"
                        }
                    )
                    <div class="col-md-10">
                        <div id="@nameof(Model.PeriodDate)" class="form-control-static">
                            @Html.DisplayFor(model => model.PeriodDate)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(
                        model => model.Date,
                        new
                        {
                            @for = nameof(Model.Date),
                            @class = "col-md-2 control-label"
                        }
                    )
                    <div class="col-md-10">
                        @Html.TextBoxFor(
                            model => model.Date,
                            "{0:MM-dd-yyyy}",
                            new
                            {
                                id = nameof(Model.Date),
                                name = nameof(Model.Date),
                                @class = "form-control"
                            }
                        )
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(
                        model => model.Name,
                        new
                        {
                            @for = nameof(Model.Name),
                            @class = "col-md-2 control-label"
                        }
                    )
                    <div class="col-md-10">
                        @Html.TextBoxFor(
                            model => model.Name,
                            new
                            {
                                id = nameof(Model.Name),
                                name = nameof(Model.Name),
                                @class = "form-control"
                            }
                        )
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(
                        model => model.Amount,
                        new
                        {
                            @for = nameof(Model.Amount),
                            @class = "col-md-2 control-label"
                        }
                    )
                    <div class="col-md-10">
                        @Html.TextBoxFor(
                            model => model.Amount,
                            "{0:#,##0}",
                            new
                            {
                                id = nameof(Model.Amount),
                                name = nameof(Model.Amount),
                                @class = "form-control"
                            }
                        )
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-inline">
                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-primary">Update</button>
                    <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </div>
    }
</div>
